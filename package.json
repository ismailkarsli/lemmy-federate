{
	"name": "lemmy-federate",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"fe:dev": "vite frontend",
		"fe:build": "vite build frontend --emptyOutDir --outDir ./dist",
		"build": "pnpm fe:build",
		"deploy": "pnpm build && wrangler deploy",
		"db:generate": "prisma generate",
		"db:migrate:local": "wrangler d1 migrations apply lemmy-federate-db --local",
		"db:migrate:remote": "wrangler d1 migrations apply lemmy-federate-db --remote",
		"check": "pnpm exec vue-tsc --build --noEmit && biome check --write .",
		"cf-typegen": "wrangler types ./src/types/worker-bindings.d.ts --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@hono/trpc-server": "0.4.0",
		"@mdi/font": "7.4.47",
		"@prisma/adapter-d1": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@trpc/client": "^11.7.1",
		"@trpc/server": "^11.7.1",
		"cookie": "1.0.2",
		"hono": "^4.10.4",
		"jsonld": "9.0.0",
		"ky": "1.10.0",
		"lemmy-js-client": "0.19.12-name-and-message.1",
		"ms": "2.1.3",
		"pinia": "3.0.3",
		"vue": "3.6.0-alpha.2",
		"vue-router": "^4.6.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@tanstack/vue-query": "5.87.1",
		"@types/jsonld": "1.5.15",
		"@types/ms": "2.1.0",
		"@types/node": "^24.9.2",
		"@vitejs/plugin-vue": "6.0.1",
		"@vue/tsconfig": "^0.8.1",
		"prisma": "^7.2.0",
		"typescript": "5.9.2",
		"vite": "7.1.4",
		"vite-plugin-vuetify": "2.1.2",
		"vue-tsc": "3.0.6",
		"vuetify": "3.9.7",
		"wrangler": "^4.54.0"
	},
	"packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
