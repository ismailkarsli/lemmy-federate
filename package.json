	"private": true,
	"type": "module",
	"scripts": {
		"start": "node --no-warnings=ExperimentalWarning src/index.ts",
		"dev": "run-p be:dev fe:dev",
		"be:dev": "node --watch --watch-preserve-output --no-warnings=ExperimentalWarning --env-file .env src/index.ts",
